# Database Configuration
DATABASE_URL=postgresql://railoptima:password@localhost:5432/railoptima
POSTGRES_DB=railoptima
POSTGRES_USER=railoptima
POSTGRES_PASSWORD=password

# Message Queue
RABBITMQ_URL=amqp://railoptima:password@localhost:5672/
RABBITMQ_DEFAULT_USER=railoptima
RABBITMQ_DEFAULT_PASS=password

# Service URLs
DATA_SERVICE_URL=http://localhost:8000
OPT_ENGINE_URL=http://localhost:8001
SIMULATOR_URL=http://localhost:8002

# Optimization Engine
SOLVER_TYPE=ortools
# GUROBI_LICENSE_FILE=/path/to/gurobi.lic  # Uncomment if using Gurobi

# Authentication (if implementing JWT auth)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# External APIs
# WEATHER_API_KEY=your-weather-api-key
# MAPS_API_KEY=your-maps-api-key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Logging
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_PORT=5601

# React App Environment Variables
REACT_APP_DATA_SERVICE_URL=http://localhost:8000
REACT_APP_OPT_ENGINE_URL=http://localhost:8001
REACT_APP_SIMULATOR_URL=http://localhost:8002
REACT_APP_MAPS_API_KEY=your-maps-api-key

# Development
NODE_ENV=development
LOG_LEVEL=info
